generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  admin
  user
  viewer
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String   // hashed password
  name      String?
  role      UserRole @default(user)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Settings {
  id                      String   @id @default("settings")
  scheduledSyncEnabled     Boolean  @default(false)
  scheduledSyncTime        String   @default("13:10") // 1:10 PM in 24-hour format
  updatedAt                DateTime @updatedAt
}